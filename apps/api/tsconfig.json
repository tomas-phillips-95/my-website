{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "composite": true,
    "declarationMap": true,
    "target": "es2021",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "lib": ["es2021", "dom"],
    "paths": {
      "@/*": ["./src/*"],
    },
  },
  "include": ["env.d.ts", "src/**/*"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
